# Production Environment Configuration
ENVIRONMENT=production
DEBUG=False

# Database
DATABASE_URL=sqlite:///./data/erp.db

# Security - IMPORTANT: Change these values!
# Generate SECRET_KEY with: python -c "import secrets; print('sk_prod_' + secrets.token_hex(50))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET_KEY_IN_PRODUCTION

# ALLOWED_HOSTS: Comma-separated list of your domain(s), www subdomain, server IP, and localhost
# Example: yourdomain.com,www.yourdomain.com,123.456.789.012,localhost
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# PDF Generation
WKHTMLTOPDF_PATH=/usr/bin/wkhtmltopdf

# File Storage
RECEIPTS_DIR=receipts
INVOICES_DIR=rechnungen

# Development
RELOAD=False